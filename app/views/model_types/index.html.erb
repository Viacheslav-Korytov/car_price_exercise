<h1>Listing model_types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model type slug</th>
      <th>Model type code</th>
      <th>Base price</th>
      <th>Car model</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @model_types.each do |model_type| %>
      <tr>
        <td><%= model_type.name %></td>
        <td><%= model_type.model_type_slug %></td>
        <td><%= model_type.model_type_code %></td>
        <td><%= model_type.base_price %></td>
        <td><%= model_type.car_model.name %></td>
        <td><%= link_to 'Show', car_model_model_type_path(@car_model, model_type) %></td>
        <td><%= link_to 'Edit', edit_car_model_model_type_path(@car_model, model_type) %></td>
        <td><%= link_to 'Destroy', car_model_model_type_path(@car_model, model_type), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Model type', new_car_model_model_type_path(@car_model) %>
